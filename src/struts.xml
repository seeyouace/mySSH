<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="default" namespace="/" extends="struts-default">  
	    <action name="login" class="com.mySSH.login.action.LoginAction">  
	        <result name="success">/jsp/login/success.jsp</result>  
	        <result name="fail">/jsp/login/fail.jsp</result>  
	        <result name="noUser">/jsp/login/noUser.jsp</result>  
	    </action>  
	    <action name="register" class="com.mySSH.login.action.LoginAction" method="register">  
	        <result name="success">/jsp/login/success.jsp</result>  
	        <result name="fail">/jsp/login/fail.jsp</result>
	    </action>  
	</package>	
</struts>